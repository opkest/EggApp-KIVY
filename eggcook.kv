#:kivy 1.8.0
<EggCook>:
    orientation: 'vertical'
    button_font_size: '30sp'
    canvas:
        Rectangle:
            source: 'images/background.png'
            size: self.size
    padding: root.width * 0.02, root.height * 0.02
    Label:
        text: 'Egg Cook!'
        color: [1, 0, 0, 1]
        font_size: '50sp'
        size_hint: 1, 1
        height: self.texture_size[1] + (2 * root.padding[1])
    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1, None 
        height: soft_button.height
        Button:
            id: soft_button
            text: 'Soft Boil'
            font_size: root.button_font_size
            size_hint: 1, None
            height: self.texture_size[1] + (2 * root.padding[1])
            on_press: root.button1()
        Button:
            text: 'Hard Boil'
            font_size: root.button_font_size
            size_hint: 1, None
            height: self.texture_size[1] + (2 * root.padding[1])
            on_press: root.button2()
